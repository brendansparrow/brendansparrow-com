{
  "name": "brendansparrow-com",
  "version": "1.1.0",
  "description": "A boilerplate for building a fast static website with the Eleventy static site generator.",
  "scripts": {
    "build": "npx eleventy",
    "watch": "npx eleventy --watch",
    "start": "npx eleventy --serve",
    "debug": "DEBUG=* npx eleventy",
    "lint": "npx pretty-quick"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brendansparrow/brendansparrow-com"
  },
  "author": {
    "name": "Brendan Sparrow",
    "email": "btsparrow@hotmail.co.uk",
    "url": "https://www.brendansparrow.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendansparrow/brendansparrow-com/issues"
  },
  "homepage": "https://brendansparrow.com",
  "devDependencies": {
    "@11ty/eleventy": "^0.8.2",
    "husky": "^3.1.0",
    "luxon": "^1.16.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.2.4",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "clean-css": "^4.2.1",
    "html-minifier": "^4.0.0",
    "uglify-es": "^3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
